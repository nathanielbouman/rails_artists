
<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<div class="artists edit">
  <h1>Edit Artist</h1>

  <%= form_for(:artist, :url => {:action => 'update', :id => @artist.id}) do |f| %>

    <table summary="Artist form fields">
      <tr>
        <th>Name</th>
        <td><%= f.text_field(:name) %></td>
      </tr>

    </table>

    <div class="form-buttons">
      <%= submit_tag("Update") %>
    </div>

  <% end %>
</div>

