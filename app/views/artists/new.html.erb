
<%= link_to("<< Back to Artist List", {:action => 'index'}, :class => 'back-link') %>

<div class="artists new">
  <h2>Create Artist</h2>

  <%= form_for(:artist, :url => {:action => 'create'}) do |f| %>

    <table summary="Subject form fields">
      <tr>
        <th>Name</th>
        <td><%= f.text_field(:name) %></td>
      </tr>
    </table>

    <div class="form-buttons">
      <%= submit_tag("Create Artist") %>
    </div>

  <% end %>
</div>

